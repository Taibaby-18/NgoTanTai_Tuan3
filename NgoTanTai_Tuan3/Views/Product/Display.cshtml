@model NgoTanTai_Tuan3.Models.Product

<h2 class="text-center my-4">@Model.Name</h2>

<div class="border p-3 rounded shadow-sm mb-4 mx-auto" style="max-width: 600px;">
    <h4 class="mb-3 text-center">Giá: <span class="text-primary">@Model.Price.ToString("C0")</span></h4>
    <p class="text-center">@Model.Description</p>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mt-3 text-center">
            <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="width: 100%; max-width: 300px;" />
        </div>
    }
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-danger btn-lg">Back</a>
</div>
