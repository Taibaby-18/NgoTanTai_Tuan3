@model NgoTanTai_Tuan3.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edit Product";
}

<h2 class="text-center my-4">Chỉnh sửa sản phẩm</h2>

<div class="card shadow-sm p-4 mb-5 bg-body rounded">
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Danh mục</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Hình ảnh sản phẩm</label>
            <input type="file" asp-for="ImageUrl" class="form-control" />
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mt-2">
                    <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-width: 200px;" />
                </div>
            }
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>
