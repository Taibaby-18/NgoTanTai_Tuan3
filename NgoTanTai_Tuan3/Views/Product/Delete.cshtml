@model NgoTanTai_Tuan3.Models.Product

<h2 class="text-center my-4 text-danger">Xóa sản phẩm</h2>

<div class="card shadow-sm p-4 mb-5 bg-body rounded border-danger">
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="alert alert-warning">
            Bạn có chắc chắn muốn xóa sản phẩm
            <strong class="text-danger">"@Model.Name"</strong> không?
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>
